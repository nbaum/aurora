- @title << "Users"
- if @user.nil? or @user.new_record?
  header
    h1 = @title.last
  menu
    li = link_to "List", [:users], exact: true
    li = link_to "New", [:new, :user]
  - @title << "New" if !@user.nil?
- else
  - @title << @user.name
  header
    h1 = @title.last
  menu
    li = link_to "← User List", :users, exact: true, class: "bare"
    li = link_to "View", @user, exact: true
    li = link_to "Edit", [:edit, @user]
    li = link_to "Password", [:password, @user]
