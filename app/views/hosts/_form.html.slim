= form_for @host do |f|
  - if @host.errors.any?
    .errors
      h2 = "#{pluralize(@host.errors.count, "error")} prohibited this host from being saved:"
      ul
        - @host.errors.full_messages.each do |message|
          li = message

  table.properties
    tr
      th
      td
        label
          =' f.check_box :enabled
          ' Enabled
    tr
      th = f.label :name
      td = f.text_field :name
    tr
      th = f.label :cores
      td = f.number_field :cores
    tr
      th = f.label :memory
      td = f.number_field :memory
    tr
      th = f.label :url
      td = f.text_field :url
    tr
      th = f.label :address
      td = f.text_field :address
    tr
      th
      td
        label
          =' f.check_box :has_compute
          ' Run servers on this host
    tr
      th
      td
        label
          =' f.check_box :has_storage
          ' Store volumes on this host
    tr
      th = f.label :zone_id
      td = f.select :zone_id, Zone.pluck(:name, :id)
    tr
      th
      td = f.button @host.new_record? ? "Create" : "Update"
